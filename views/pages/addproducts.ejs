<% include ../partials/header %>
<form action="/products/complete" method="post">
    <div class="form-group">
        <label for="">Title</label>
        <input type="text" class="form-control" name="title" id="" aria-describedby="helpId" placeholder="">
        <small id="helpId" class="form-text text-muted">Product Title</small>
    </div>
    <div class="form-group">
        <label for="">Price</label>
        <input type="number" step=".01" class="form-control" name="price" id="" aria-describedby="helpId" placeholder="">
        <small id="helpId" class="form-text text-muted">Product Price</small>
    </div>
    <div class="form-group">
        <label for="">Creat At</label>
        <input type="date" class="form-control" name="created_at" id="" aria-describedby="helpId" placeholder=""
           >
        <small id="helpId" class="form-text text-muted">Creat At</small>
    </div>
    <div class="form-group">
            <label for="">Tags</label>
            <input type="text" class="form-control" name="tags" id="" aria-describedby="helpId" placeholder="">
            <small id="helpId" class="form-text text-muted">Tags of Product</small>
        </div>
    
    <button type="submit" class="btn btn-success">ADD</button>

</form>
<% include ../partials/footer %>