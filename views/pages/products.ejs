<% include ../partials/header %>
<h2>Products</h2>
<hr>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Price</th>
            <th>
                <a class="btn btn-danger" href="/addproducts" role="button">Add</a>
            </th>
        </tr>
    </thead>
    <tbody>
        <% products.forEach(function(product){ %>
        <tr>
            <td scope="row">
                <%= product.id%>
            </td>
            <td>
                <%= product.title%>
            </td>
            <td>
                <%= product.price%>
            </td>
            <td>
                <a class="btn btn-success" href="/products/<%= product.id%>" role="button">Edit</a>
            </td>
        </tr>
        <% }); %>
    </tbody>
</table>
<% include ../partials/footer %>