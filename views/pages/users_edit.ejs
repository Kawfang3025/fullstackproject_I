<% include ../partials/header %>
<form action="/users/update" method="post">
    <div class="form-group">
      <label for="">ID</label>
      <input type="number"
        class="form-control" value="<%= users.id %>" name="id" id="" aria-describedby="helpId" placeholder="">
      <small id="helpId" class="form-text text-muted">User ID</small>
    </div>
    <div class="form-group">
      <label for="">Email</label>
      <input type="text"
        class="form-control" value="<%= users.email %>" name="email" id="" aria-describedby="helpId" placeholder="">
      <small id="helpId" class="form-text text-muted">E-mail</small>
    </div>
    <div class="form-group">
      <label for="">Password</label>
      <input type="text"
        class="form-control" value="<%= users.password %>" name="password" id="" aria-describedby="helpId" placeholder="">
      <small id="helpId" class="form-text text-muted">Password</small>
    </div>


    <a class="btn btn-warning" href="/users" role="button">Back</a>
    <button type="submit"  class="btn btn-success">Save</button>
    <a class="btn btn-danger text-light" onclick="confirm('Are you sure to delete?');" href="/users/delete/<%= users.id %>" role="button">Delete</a>
    </form>
<% include ../partials/footer %>